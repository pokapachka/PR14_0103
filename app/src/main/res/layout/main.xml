<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#0097FF"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ВИДЫ ТРЕНИРОВОК"
                android:textColor="@color/white"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/training1"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/k1"
            android:visibility="gone"
            android:onClick="onClickTraining1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Спина"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/training2"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/k2"
            android:visibility="gone"
            android:onClick="onClickTraining2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Бицепсы"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/training3"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/k3"
            android:visibility="gone"
            android:onClick="onClickTraining3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Трицепсы"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/training4"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/k4"
            android:visibility="gone"
            android:onClick="onClickTraining4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Икроножные мышцы"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"/>

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>